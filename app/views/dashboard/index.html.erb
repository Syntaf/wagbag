<div aria-hidden="true" class="navdrawer navdrawer-permanent" id="navdrawerPermanent" tabindex="-1">
	<h1>WagBag</h1>
	<hr>
	<div class="navigation-links">
		<%= link_to "Dashboard", dashboard_path, class: "link active" %>
	</div>
</div>
<div class="navbar-content">
	<div class="container">
		<div class="flex-grid">

			<div class="card active-stock-card">
				<div class="card-header">
					<h4>Total Active Stock</h4>
				</div>
				<div class="card-content">
					<p><%= @activeInventory %></p>
				</div>
			</div>

			<div class="card latest-notes-card flex-fill">
				<div class="card-header">
					<h4>Latest Notes</h4>
				</div>
				<div class="card-content">
					<table class="table">
						<tr>
							<th>Area</th>
							<th>Station</th>
							<th>Notes</th>
							<th>Volunteer</th>
						</tr>
						<% @latestStationStatuses.each do |stationStatus| %>
							<% if stationStatus.notes %>
								<tr>
									<td><%= stationStatus.station.area.name %></td>
									<td><%= stationStatus.station.name %></td>
									<td><%= stationStatus.notes %></td>
									<td><%= stationStatus.user.name %>
								</tr>
							<% end %>
                        <% end %>
					</table>
				</div>
			</div>
		</div>

		<div class="flex-grid">

			<div class="card logs-card">
				<div class="card-header">
					<h4>Activity</h4>
				</div>
				<div class="card-content">
					<table class="table">
						<tr>
							<th>Date</th>
							<th>Station</th>
							<th>Fill Amnt</th>
							<th>Volunteer</th>
						</tr>
						<% @latestStationStatuses.each do |stationStatus| %>
							<tr>
								<td><%= localize(stationStatus.created_at, :format => :long) %></td>
								<td><%= stationStatus.station.name %></td>
								<td><%= stationStatus.count %></td>
								<td><%= stationStatus.user.name %></td>
							</tr>
						<% end %>
					</table>
				</div>
			</div>

            <div class="card map-card flex-fill" id="map">

            </div>
		</div>
	</div>
</div>